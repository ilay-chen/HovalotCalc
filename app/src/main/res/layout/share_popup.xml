<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_background">

    <TextView
        android:id="@+id/text_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:text="שתף באמצעות..." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="1"
        android:layout_marginTop="40px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_share"
        app:layout_constraintVertical_bias="0.0"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/send_whatsapp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/send_whatsapp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:background="@drawable/send_whatsapp">
        </Button>

        <Button
            android:layout_weight="1"
            android:id="@+id/send_sms"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:src="@drawable/send_sms"
            android:background="@drawable/send_sms">
        </Button>

        <Button
            android:layout_weight="1"
            android:id="@+id/send_email"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_margin="2dp"
            android:src="@drawable/send_email"
            android:background="@drawable/send_email">
        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>