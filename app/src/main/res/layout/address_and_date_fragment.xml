<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/date_time_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_edit_text_box_height"
        android:background="@drawable/gray_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <TextView
            android:id="@+id/from_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
android:visibility="gone"
            android:layout_weight="1"
            android:hint="כתובת נוכחית"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/address_from_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/address_edit_text_height"

            android:layout_weight="1"
            android:hint="כתובת נוכחית: "
            android:padding="10dp"
            android:background="@drawable/round_edit_text"
            android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/from_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:visibility="gone"
                android:text="רחוב: "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/street_from_edit_text"
                android:layout_width="150dp"
                android:layout_height="@dimen/address_edit_text_height"
                android:layout_weight="1"
                android:hint="רחוב"
                android:paddingRight="5dp"
                android:background="@drawable/round_edit_text"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView_home_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"

                android:text=" מס"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/home_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/numbers"
                android:layout_weight="1"

                android:background="@drawable/round_edit_text" />

            <TextView
                android:id="@+id/textView_home_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"

                android:text=" קומה"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/home_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/numbers"
                android:layout_weight="1"

                android:background="@drawable/round_edit_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <TextView
            android:id="@+id/textView_elevator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:layout_weight="1"


            android:text="מעלית"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/elevator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_crane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:layout_weight="1"


            android:text="מנוף"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/crane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_packing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:layout_weight="1"


            android:text="מנוף"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/packing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
