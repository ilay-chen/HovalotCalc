    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="34dp">

        <EditText
            android:id="@+id/date_edit_text"
            android:layout_width="145dp"
            android:layout_height="@dimen/address_edit_text_height"
            android:layout_weight="1"
            android:textColorHint="#000000"
            android:textSize="15dp"

            android:textAlignment="center"
            android:hint="תאריך ההובלה?"
            android:background="@drawable/round_edit_text_right"
            android:inputType="date" />

<!--            android:drawableRight="@drawable/diary_icon_small_v2"-->


        <Spinner
            android:id="@+id/hour_edit_text"
            android:layout_width="145dp"
            android:layout_height="@dimen/address_edit_text_height"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textAlignment="center"
            android:paddingBottom="2px"

            android:entries="@array/hours_range"

            android:background="@drawable/round_edit_text_left"
            android:inputType="date" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/next1"
        android:layout_width="175dp"
        android:layout_height="75dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/next"
        app:srcCompat="@drawable/next" />

    <Button
        android:id="@+id/previous"
        android:layout_width="175dp"
        android:layout_height="75dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/back"
        app:srcCompat="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>